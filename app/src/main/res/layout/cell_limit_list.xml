<?xml version="1.0" encoding="utf-8"?>
<ca.wlu.hztw.myschedule.util.SwipeItemLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cell_limit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?android:colorBackground"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="8dp"
            app:contentPaddingBottom="8dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cell_limit_time"
                    android:text="14:00-15:00"
                    android:textSize="20sp"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/cell_limit_desc"
                      android:text="Every Mon Tue Wed Thu Fir Sat Sun"
                      android:textSize="20sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#ff5100"
                android:id="@+id/cell_limit_discard"
                android:text="DISCARD"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_gravity="end"/>
    </FrameLayout>

</ca.wlu.hztw.myschedule.util.SwipeItemLayout>